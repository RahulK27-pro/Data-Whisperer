{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
